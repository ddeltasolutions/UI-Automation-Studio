<UserControl x:Class="UIAutomationStudio.UserControlKeysCombination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIAutomationStudio"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
	
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="35" />
			<RowDefinition />
		</Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" Margin="0,5,0,0">Send Predefined Keys Combination</TextBlock>
		
		<StackPanel Grid.Row="1" Orientation="Horizontal" Height="24" VerticalAlignment="Top" Margin="0,5,0,0">
			<TextBlock Margin="10,2,10,0" Style="{StaticResource myStyle}">Predefined Keys Combination:</TextBlock>
			<ComboBox Width="150" Height="24" x:Name="cmbKeys" />
		</StackPanel>
    </Grid>
</UserControl>
