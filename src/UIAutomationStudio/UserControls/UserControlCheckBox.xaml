<UserControl x:Class="UIAutomationStudio.UserControlCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIAutomationStudio"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
			 
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">Set the check state</TextBlock>
		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<TextBlock Margin="0,0,5,0" Style="{StaticResource myStyle}">State: </TextBlock>
			<ComboBox Width="150" VerticalAlignment="Top" x:Name="cmbStates">
				<ComboBoxItem>Checked</ComboBoxItem>
				<ComboBoxItem>Unchecked</ComboBoxItem>
			</ComboBox>
		</StackPanel>
    </Grid>
</UserControl>
