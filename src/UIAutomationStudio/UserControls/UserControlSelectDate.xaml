<UserControl x:Class="UIAutomationStudio.UserControlSelectDate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIAutomationStudio"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
	
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="35" />
			<RowDefinition />
		</Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" Margin="0,5,0,0" x:Name="txbTitle">Specify date to select</TextBlock>
		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<TextBlock Margin="0,0,5,0" Style="{StaticResource myStyle}">Date: </TextBlock>
			<DatePicker SelectedDateFormat="Short" Width="200" Height="25" VerticalAlignment="Top" x:Name="datePicker"></DatePicker>
		</StackPanel>
    </Grid>
</UserControl>
