<Window x:Class="UIAutomationStudio.StopPauseResumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIAutomationStudio"
        mc:Ignorable="d"
        ShowInTaskbar="False" Height="30" Width="90" Loaded="OnLoaded" ResizeMode="NoResize" 
		WindowStartupLocation="Manual" WindowStyle="None" Topmost="True" Top="0" AllowsTransparency="True" Background="Transparent">
    <StackPanel Orientation="Horizontal">
		<Button x:Name="btnStop" Width="45">Stop</Button>
		<Button x:Name="btnPause" Width="45" Margin="1,0,0,0">Pause</Button>
    </StackPanel>
</Window>
