<UserControl x:Class="UIAutomationStudio.UserControlItemByIndex"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIAutomationStudio"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
			 
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" x:Name="txbTitle">Text of the Nth item</TextBlock>
		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<TextBlock Margin="0,2,5,0" x:Name="txbLabel" Style="{StaticResource myStyle}">N (starts with 0): </TextBlock>
			<TextBox Width="50" Height="24" VerticalAlignment="Top" x:Name="txtIndex" />
		</StackPanel>
    </Grid>
</UserControl>
