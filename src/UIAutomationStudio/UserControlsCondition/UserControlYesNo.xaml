<UserControl x:Class="UIAutomationStudio.UserControlYesNo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIAutomationStudio"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="40" />
			<RowDefinition />
		</Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold">Choose a value</TextBlock>
		
		<Grid Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			
			<RadioButton x:Name="chkYes" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" FontWeight="Bold" FontSize="14" Foreground="Blue">Yes</RadioButton>
			<RadioButton x:Name="chkNo" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" FontWeight="Bold" FontSize="14" Foreground="Blue">No</RadioButton>
		</Grid>
    </Grid>
</UserControl>
